@base <http://example.org/pipeline> .
@prefix code: <https://code.described.at/> .
@prefix p: <https://pipeline.described.at/> .

<#pipeline> a p:Pipeline, p:Readable ;
  p:variables [
    p:variable [ a p:Variable ;
      p:name "filename" ;
      p:value "examples/test.csv"
    ]
  ] ;
  p:steps [
    p:stepList ( <#readFile> <#parseCsv> <#forEach> <#serializeJson> )
  ] .

<#readFile> a p:Step ;
  code:implementedBy [ a code:EcmaScript ;
    code:link <node:fs#createReadStream>
  ] ;
  code:arguments ( "${filename}"^^code:EcmaScriptTemplateLiteral ) .

<#parseCsv> a p:Step ;
  code:implementedBy [ a code:EcmaScript ;
    code:link <file:steps/parseCsv.js>
  ] .

<#forEach> a p:Step ;
  code:implementedBy [ a code:EcmaScript ;
    code:link <file:..#forEach>
  ] ;
  code:arguments ( <#subPipeline> ) .

<#serializeJson> a p:Step ;
  code:implementedBy [ a code:EcmaScript ;
    code:link <file:steps/serializeJson.js>
  ] .

<#subPipeline> a p:Pipeline, p:ReadableObjectMode, p:WritableObjectMode ;
  p:steps [
    p:stepList ( <#duplicate> )
  ] .

<#duplicate> a p:Step ;
  code:implementedBy [ a code:EcmaScript ;
    code:link <file:steps/duplicate.js>
  ] .
